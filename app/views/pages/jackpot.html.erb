
<section class="gamejs">
  <h1 class="page-title">jackpot</h1>
  <div class="overlay-text visible">
    Click to Start
  </div>
  <div class="overlay-text" id="game-over-text">
    GAME OVER
    <span class="overlay-text-small">Click to Start</span>
  </div>
  <div class="overlay-text" id="victory-text">
    VICTORY
    <span class="overlay-text-small">Click to Start</span>
  </div>

  <div class="jackpot-container">
    <div class="grid-tiles">
      <div class="tile" id="t1" data-value="1">1</div>
      <div class="tile" id="t2" data-value="2">2</div>
      <div class="tile" id="t3" data-value="3">3</div>
      <div class="tile" id="t4" data-value="4">4</div>
      <div class="tile" id="t5" data-value="5">5</div>
      <div class="tile" id="t6" data-value="6">6</div>
      <div class="tile" id="t7" data-value="7">7</div>
      <div class="tile" id="t8" data-value="8">8</div>
      <div class="tile" id="t9" data-value="9">9</div>
    </div>
    <div class="dice-wrapper">
      <%= image_tag ('dice-1.png'), id:'dice1' %>
      <%= image_tag ('dice-2.png'), id:'dice2' %>
    </div>
    <h2 id="status" class="text-center"></h2>
    <button class="btn" id="btn-roll">Lancer les d√©s</button>
  </div>
</section>
